
@{
    ViewData["Title"] = "Trazabilidad";
    ViewData["Modulo"] = "PartesEntrada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var url_getPartesEntrada = "@Url.Content("~/")" + "Trazabilidad/getPartesEntrada";
    var url_getPartesEntradaDetalle = "@Url.Content("~/")" + "Trazabilidad/getPartesEntradaDetalle";
</script>

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <div class="mb-3">
                <label for="fecIni" class="form-label">Fecha Inicial</label>
                <input type="date" class="form-control" id="fecIni" autocomplete="off" />
            </div>
        </div>
        <div class="col-2">
            <div class="mb-3">
                <label for="fecFin" class="form-label">Fecha Final</label>
                <input type="date" class="form-control" id="fecFin" autocomplete="off" />
            </div>
        </div>
        <div class="col-1">
            <div class="mb-3">
                <label for="btnBuscar" class="form-label">&nbsp;</label>
                <button id="btnBuscar" type="button" class="form-control btn btn-primary">
                    <i class="ion ion-md-search"></i>
                </button>
            </div>

        </div>
    </div>
</div>

<table id="tPE" class="table table-striped" style="width:100%"></table>


<div class="modal fade" id="mDetalle" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Detalle de Almacen T</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="tPEDetalle" class="table table-striped" style="width:100%"></table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                @*<button type="button" class="btn btn-primary">Understood</button>*@
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="@Url.Content("~/Scripts/Portal/ParteEntrada.js")"></script>
}

