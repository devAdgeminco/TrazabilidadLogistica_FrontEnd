
@{
    ViewData["Title"] = "Trazabilidad";
    ViewData["Modulo"] = "OrdenCompra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var url_getOrdenCompra = "@Url.Content("~/")" + "Trazabilidad/getOrdenCompra";
