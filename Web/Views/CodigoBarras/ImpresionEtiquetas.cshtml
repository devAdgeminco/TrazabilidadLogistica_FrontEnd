
@{
    ViewData["Title"] = "CodigoBarras";
    ViewData["Modulo"] = "ImpresionEtiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ImpresionEtiquetas</h1>

<script>
    var url_getBarraCodigoOC = "@Url.Content("~/")" + "CodigoBarras/getBarraCodigoOC";
    var url_getBarraCodigoOCD = "@Url.Content("~/")" + "CodigoBarras/getBarraCodigoOCD";
</script>
<style>
    .barcode {
        font-family: 'Libre Barcode 128';
        font-size: 100px;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <div class="mb-3">
                <label for="Req" class="form-label">Requerimiento</label>
                <input type="text" class="form-control" id="Req" autocomplete="off" />
            </div>
        </div>
        <div class="col-1">
            <div class="mb-3">
                <label for="btnBuscar" class="form-label">&nbsp;</label>
                <button id="btnBuscar" type="button" class="form-control btn btn-primary">
                    <i class="ion ion-md-search"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<br />
<div id="cOCDPrint" class="card" style="border: none !important;">
    <div class="card-body" style="text-align: right;padding: 0px;">
        <button type="button" class="btn">
            <img src="~/assets/img/download-pdf.png" width="38" height="38" />
        </button>
    </div>
</div>

<div id="cOC" class="card">
    <div class="card-body">
        <h5 class="card-title">Orden de Compra</h5>
        <table id="tOC" class="table table-striped" style="width:100%"></table>
    </div>
</div>
<div id="cOCD" class="card">
    <div class="card-body">
        <h5 class="card-title">Detalle de Orden Compra</h5>
        <table id="tOCD" class="table table-hover offset-2" style="width:60%;text-align: center;">
            <thead>
                <tr>
                    <td>Codigo de Barras</td>
                    <td>Descripción de Producto</td>
                    <td style="width: 100px;">Cantidad de Etiquetas</td>
                    <td>Imprimir</td>
                </tr>
            </thead>
            <tbody id="tBody_OCD"></tbody>
        </table>
        <div">
            <button type="button" class="btn btn-outline-info">
                <i class="ion ion-md-print" style="font-size:22px"></i>
            </button>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Portal/ImpresionEtiquetas.js")"></script>
}